<!DOCTYPE>
<html>
    <head>
        <title><%= prop.title %></title>

        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="stylesheets/materialize.min.css" type="text/css" rel="stylesheet" media="screen,projection">
    </head>

    <body>
        <div id="login-page" class="row">
            <div class="col s12 z-depth-4 card-panel">
              
              <form class="login-form" method="post" action="/auth/byEmail">
                            
                <div class="row margin">
                  <div class="input-field col s12">
                    <p>Email</p>
                    <i class="prefix material-icons">email_outline</i>
                    <input id="email" type="email" name="email" class="validade"></input>                    
                  </div>
                </div>
                
                <div class="row margin">
                  <div class="input-field col s12">
                    <p>Password</p>
                    <i class="prefix material-icons">lock_outline</i>
                    <input id="password" type="password" name="password" class="validate"></input>
                  </div>
                </div>
                
                <div class="row">
                  <div class="input-field col s12">
                    <input type="submit" id="submit" value="Login" class="btn waves-effect waves-light col s12"></input>
                  </div>
                </div>
      
              </form>
        
              <div class="row">
                  <a class="waves-effect waves-light btn" href="/byToken">By Token</a>
              </div>
              
            </div>
          </div>
    </body>

    <script type="text/javascript" src="scripts/materialize.min.js"></script>
</html>